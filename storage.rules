rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Event images - allow public read access for published events
    // Allow authenticated users to upload/manage their own event images
    // Allow admin users to delete any event images
    match /events/{userId}/{allPaths=**} {
      // Allow public read access to event images
      allow read: if true;
      
      // Allow authenticated users to write their own event images
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow any authenticated user to delete event images
      // (application logic should handle admin permissions)
      allow delete: if request.auth != null;
    }
    
    // Profile images - similar rules
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Organization images
    match /organizations/{orgId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}